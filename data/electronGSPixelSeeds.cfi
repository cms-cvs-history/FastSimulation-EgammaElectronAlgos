include "RecoEgamma/EgammaElectronProducers/data/pixelSeedConfiguration.cfi"
module electronGSPixelSeeds= ElectronGSPixelSeedProducer {

    PSet SeedConfiguration = { 
	using electronPixelSeedConfiguration
    }

    # Inputs
    InputTag barrelSuperClusters = correctedHybridSuperClusters
    InputTag endcapSuperClusters = correctedEndcapSuperClustersWithPreshower
    InputTag simTracks = famosSimHits
    InputTag trackerHits = siTrackerGaussianSmearingRecHits:TrackerGSMatchedRecHits
    InputTag beamSpot = offlineBeamSpot

    # A cut on the sim track transverse momentum (specific to fastSim)
    double pTMin = 3.
}
